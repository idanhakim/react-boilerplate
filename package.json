{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "react-boilerplate",
  "main": "src/server.jsx",
  "scripts": {
    "start": "npm run start:server & npm run start:client",
    "start:client": "webpack-serve --config webpack.config.serve.js",
    "start:server": "webpack -w --config webpack.config.server.js",
    "start:mongo": "docker run --rm -d -p 27017:27017 --name mongo mongo",
    "clean": "rimraf dist/",
    "build": "npm run clean && npm run build:server & npm run build:client",
    "build:server": "webpack --env.prod --env.min --config webpack.config.server.js",
    "build:client": "webpack --env.prod --env.min --config webpack.config.client.js",
    "lint": "eslint --ext js,jsx src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy:test": "npm run lint && npm run test",
    "deploy:build": "npm run deploy:test && npm run build && docker build -t yuri/react-bo . ",
    "deploy:run": "docker run yuri/react-bo --hostname=yuri -p 49170:5000 -d ",
    "debug:server": "webpack -p --env.min --config webpack.config.server.js -w",
    "debug:client": "webpack -p --env.min --config webpack.config.client.js -w",
    "debug": "npm run debug:server",
    "dist": "npm run build && cd dist && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yurikrupnik/react-boilerplate.git"
  },
  "author": {
    "name": "Yuri Krupnik",
    "email": "krupnik.yuri@gmail.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yurikrupnik/react-boilerplate/issues"
  },
  "homepage": "https://github.com/yurikrupnik/react-boilerplate#readme",
  "dependencies": {
    "@material-ui/core": "^3.1.0",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.0",
    "connect-mongo": "^2.0.1",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "flexboxgrid": "^6.3.1",
    "mongoose": "^5.2.15",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-loadable": "^5.5.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "shortid": "^2.2.13",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.2",
    "browser-sync": "^2.24.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "connect-history-api-fallback": "^1.5.0",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "css-hot-loader": "^1.4.2",
    "css-loader": "^1.0.0",
    "dotenv-webpack": "^1.5.7",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "generate-json-webpack-plugin": "^0.3.1",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.19.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "koa-connect": "^2.0.1",
    "mini-css-extract-plugin": "^0.4.3",
    "moxios": "^0.4.0",
    "node-sass": "^4.9.3",
    "nodemon-webpack-plugin": "^4.0.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "uglifyjs-webpack-plugin": "^1.2.6",
    "webpack": "^4.19.1",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2",
    "webpack-serve": "^2.0.2"
  },
  "jest": {
    "setupFiles": [
      "./jestsetup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  }
}
